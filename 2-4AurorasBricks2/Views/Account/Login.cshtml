@model LoginViewModel

@{
    ViewBag.Title = "User Login";
}
<br />
<div class="container container-form">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <h1 class="text-center">User Login</h1>
            <br />

            <div class="row">
                <div class="text-center">
                    <h1>Local Account Login</h1>
                    <hr />
                    <form class="form-outline" method="post" asp-action="Login" asp-controller="Account">
                        <input type="hidden" name="ReturnUrl" value="@Model.ReturnUrl" />
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Username"></label>
                            <input asp-for="Username" class="form-control" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password"></label>
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <div class="checkbox">
                                <label asp-for="RememberMe">
                                    <input asp-for="RememberMe" />
                                    @Html.DisplayNameFor(m => m.RememberMe)
                                </label>
                            </div>
                        </div>
                        <br />
                        <div class="form-group">
                            <button type="submit" class="button button-project">Login</button>
                        </div>
                        <br />
                        <div>
                            <a asp-controller="Account" asp-action="ForgotPassword">Forgot Password?</a>
                        </div>
                        <div>
                            <p>Don't have an account? Register <a asp-controller="Account" asp-action="Register">here</a>!</p>
                        </div>
                    </form>
                </div>
                <div class="text-center">
                    <h2>Use your Google Account to Login:</h2>
                    
                    @{
                        if (Model.ExternalLogins?.Count == 0)
                        {
                            <div>No external logins configured</div>
                        }
                        else
                        {
                            <form method="post" asp-action="ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl">
                                <div>
                                    @foreach (var provider in Model.ExternalLogins)
                                        {
                                            <button onclick="ExternalLogin(@provider.Name, @Model.ReturnUrl)" type="submit" class="button button-project"
                                                    name="provider" value="@provider.Name"
                                                    title="Log in using your @provider.DisplayName account">
                                                Authenticate with @provider.DisplayName
                                            </button>
                                        }
                                </div>
                            </form>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>