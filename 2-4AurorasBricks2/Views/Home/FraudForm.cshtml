

<h2>@ViewData["Title"]</h2>

@model FraudViewModel

<form asp-action="Predict" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <!-- Assuming your Order model's properties... -->
    <div class="form-group">
        <label asp-for="Order.Date" class="control-label">Date</label>
        <input asp-for="Order.Date" class="form-control" type="date" />
    </div>

    <div class="form-group">
        <label asp-for="Order.DayOfWeek" class="control-label">Day of Week</label>
        <select asp-for="Order.DayOfWeek" class="form-control">
            <option value="Mon">Monday</option>
            <option value="Tue">Tuesday</option>
            <option value="Wed">Wednesday</option>
            <option value="Thu">Thursday</option>
            <option value="Fri">Friday</option>
            <option value="Sat">Saturday</option>
            <option value="Sun">Sunday</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Order.Time" class="control-label">Time</label>
        <input asp-for="Order.Time" class="form-control" type="time" />
    </div>

    <div class="form-group">
        <label asp-for="Order.TypeOfTransaction" class="control-label">Type of Transaction</label>
        <select asp-for="Order.TypeOfTransaction" class="form-control">
            <option value="Online">Online</option>
            <option value="POS">Point of Sale (POS)</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Order.Amount" class="control-label">Amount</label>
        <input asp-for="Order.Amount" class="form-control" type="number" />
    </div>

    <div class="form-group">
        <label asp-for="Order.TypeOfTransaction" class="control-label">Type of Transaction</label>
        <input asp-for="Order.TypeOfTransaction" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Order.CountryOfTransaction" class="control-label">Country of Transaction</label>
        <input asp-for="Order.CountryOfTransaction" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Order.ShippingAddress" class="control-label">Shipping Address</label>
        <input asp-for="Order.ShippingAddress" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Order.Bank" class="control-label">Bank</label>
        <input asp-for="Order.Bank" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Order.TypeOfCard" class="control-label">Type of Card</label>
        <input asp-for="Order.TypeOfCard" class="form-control" />
    </div>

    <!-- Additional Fields -->
    <div class="form-group">
        <label asp-for="Age" class="control-label">Age</label>
        <input asp-for="Age" class="form-control" type="number" />
    </div>

    <div class="form-group">
        <label asp-for="CountryOfResidence" class="control-label">Country of Residence</label>
        <input asp-for="CountryOfResidence" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Gender" class="control-label">Gender (M/F)</label>
        <input asp-for="Gender" class="form-control" maxlength="1" />
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>