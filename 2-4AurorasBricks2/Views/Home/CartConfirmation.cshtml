@{
}
@model int
<br />
<br />
<section class="page-section about-heading">
    <div class="container">
        <div class="about-heading-content">
            <div class="row">
                <div class="col-lg-12">
                    <div class="bg-faded rounded p-5">
                        <div style="background-color:rgba(245, 245, 245, 1); padding: 20px; text-align: center;">
                            @if (Model == 0)
                            {
                                <h2>Thank you for shopping with us!</h2>
                                <h3>We hope you'll come build again soon!</h3><br />
                                <a class="btn btn-info" asp-controller="Home" asp-action="Products" style="background-color: gainsboro;">Continue Shopping</a>
                                <a class="btn btn-info" asp-controller="Home" asp-action="Index" style="background-color: gainsboro;">Return Home</a>
                            }
                            else
                            {
                                <h2>Thank you for shopping with us!</h2>
                                <h3>You're purchase is pending confirmation.</h3>
                                <h4>We will notify you once your order has shipped!</h4>
                                <br />
                                <a class="btn btn-info" asp-controller="Home" asp-action="Products" style="background-color: gainsboro;">Continue Shopping</a>
                                <a class="btn btn-info" asp-controller="Home" asp-action="Index" style="background-color: gainsboro;">Return Home</a>
                            }

                            <br />
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>