@model SingleProductViewModel

<h2>Products and Their Recommended Products</h2>

@foreach (Product p in Model.Products)
{
    <h1>Product ID: @p.Name</h1>
    <h3>Price: $@p.Price</h3>
    <img src="@p.ImgLink" style="width:100"/>
}

@if (Model.RecommendedProducts != null && Model.RecommendedProducts.Any())
{
    <h3>Recommended Products:</h3>
    @foreach (var category in Model.RecommendedProducts)
    {
        <h4>@category.Key</h4>
        foreach (var recommendedProduct in category.Value)
        {
            <div>
                <p>@recommendedProduct.Name</p>
                <img src="@recommendedProduct.ImgLink" alt="Recommended Product Image" style="width:100px;">
            </div>
        }
    }
}

