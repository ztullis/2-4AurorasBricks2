@{
    Layout = null;
}

@model Product

<!DOCTYPE html>

<head>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/_2_4AurorasBricks2.styles.css" asp-append-version="true" />
    <link rel="icon" type="image/x-icon" href="~/assets/favicon.ico">
    <link href="https://fonts.googleapis.com/css?family=Raleway:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Lora:400,400i,700,700i" rel="stylesheet">
    <link href="~/css/styles.css" rel="stylesheet">
</head>


<br /><br /><br /><br />
<section class="page-section about-heading">
    <div class="container">
        <div class="about-heading-content">
            <div class="row">
                <div class="col-lg-12">
                    <div class="bg-faded rounded p-5">
                        <div style="background-color:rgba(245, 245, 245, 1); padding: 20px; text-align: center;">

                            <!-- Specify the column size -->
                            <form asp-controller="Home" asp-action="DeleteProducts" method="post">
                                <h2 style="text-align: center;">Confirm Deletion for the following Product?</h2><br />
                                <img src="@Model.ImgLink" style="display:block; margin-left: auto; margin-right: auto; width: 40%;"/><br />
                                <h3 style="text-align: center;">@Model.Name</h3>
                                <p style="text-align: center;">Are you sure you want to delete?</p>

                                <input type="hidden" asp-for="ProductId" />
                                <button type="submit" class="btn btn-danger">Delete</button> <!-- Add Bootstrap button class -->
                                <a class="btn btn-info" asp-controller="Home" asp-action="EditProducts"  style="background-color: gainsboro;">Cancel</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
      
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/scripts.js"></script>

