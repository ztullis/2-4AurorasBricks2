@{
    Layout = null;
}

@model Product

<div class="overlay" id="confirmation-overlay">
    <!-- Add a container to center the grid -->
    <div class="overlay-content">
        
        
            <!-- Specify the column size -->
            <form asp-controller="Home" asp-action="DeleteProducts" method="post">
                <h2>Confirm Deletion for the following Product?</h2>
                <img src="@Model.ImgLink" />
                <h3>@Model.Name</h3>
                <p>Are you sure you want to delete?</p>

                <input type="hidden" asp-for="ProductId" />
                <button type="submit" class="btn btn-danger">Delete</button> <!-- Add Bootstrap button class -->
                <a class="btn btn-info" asp-controller="Home" asp-action="EditProducts">Cancel</a>
            </form>
        
    </div>
</div>