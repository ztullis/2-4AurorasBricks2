@{
}

@model ProjectsListViewModel

<br />
<section class="page-section about-heading">
    <div class="container">
        <div class="about-heading-content">
            <div class="row">
                <div class="col-lg-12">
                    <div class="bg-faded rounded p-5">
                        <div style="background-color:#f8f9fa; padding: 20px;">
                            
                                <br />
                                <h2 style="margin-bottom: 20px;">Our Lego Sets!</h2>
                                <a class="btn btn-primary" asp-controller="Home" asp-action="AddProducts">Add a Product</a><br />
                            


                            <div class="table">
                                <table>
                                    <thead>
                                        <tr>
                                            <th>Image</th>
                                            <th>Name</th>
                                            <th>Price</th>
                                            <th>Category</th>
                                            <th>Year</th>
                                            <th>Number of Parts</th>
                                            <th>Primary Color</th>
                                            <th>Secondary Color</th>
                                            <th>Description</th>
                                            <th colspan="2">Manage Products</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (Product p in Model.Products)
                                        {
                                            <tr>
                                                <td><img src="@p.ImgLink" width="100"/></td>
                                                <td>@p.Name</td>
                                                <td>$ @p.Price</td>
                                                <td>@p.Category</td>
                                                <td>@p.Year</td>
                                                <td>@p.NumParts</td>
                                                <td>@p.PrimaryColor</td>
                                                <td>@p.SecondaryColor</td>

                                                <td>
                                                    <div class="description">
                                                        @if (p.Description.Length > 50)
                                                        {
                                                            <span class="short-description">@Html.Raw(p.Description.Substring(0, 50))</span>
                                                            <span class="full" style="display:none;">@Html.Raw(p.Description)</span>
                                                            <button class="more-button" onclick="toggleDescription(this)">More...</button>
                                                        }
                                                        else
                                                        {
                                                            @Html.Raw(p.Description)
                                                        }
                                                    </div>
                                                </td>
                                                @* <td><a class="btn btn-primary">Edit</a></td>
                                                <td><a class="btn btn-primary">Delete</a></td>

                                                <td>@p.Description</td> *@
                                                <td><a class="btn btn-primary" asp-controller="Home" asp-action="EditProductsSingle" asp-route-id="@p.ProductId">Edit</a></td>
                                                <td><a class="btn btn-danger" asp-controller="Home" asp-action="DeleteProducts" asp-route-id="@p.ProductId">Delete</a></td>

                    </tr>
                }
                <!-- Add more rows as needed -->
            </tbody>
            
                                </table>
                            </div>
                        </div>
                      </div>
                 </div>
              </div>
         </div>
    </div>
</section>
<div page-model="@Model.PaginationInfo" page-action="EditProducts"></div>

<div page-model="@Model.PaginationInfo" page-action="EditProducts" page-classes-enabled="true" page-class="btn" page-class-normal="btn-outline-dark" page-class-selected="btn-primary" page-url-projectType="@Model.CurrentProjectType" class="btn-group pull-right m-1"></div>