@{
}

@model ProjectsListViewModel

<div style="background-color:white">
    <div class="title-container">
        <h2>Lego Products</h2>
        <a class="btn btn-primary" asp-controller="Home" asp-action="AddProducts">Add</a>
    </div>


    <div class="table">
        <table>
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Category</th>
                    <th>Year</th>
                    <th>Number of Parts</th>
                    <th>Primary Color</th>
                    <th>Secondary Color</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Product p in Model.Products)
                {
                    <tr>
                        <td><img src="@p.ImgLink" width="100"/></td>
                        <td>@p.Name</td>
                        <td>$ @p.Price</td>
                        <td>@p.Category</td>
                        <td>@p.Year</td>
                        <td>@p.NumParts</td>
                        <td>@p.PrimaryColor</td>
                        <td>@p.SecondaryColor</td>

                        <td>
                            <div class="description">
                                @if (p.Description.Length > 50)
                                {
                                    <span class="short-description">@Html.Raw(p.Description.Substring(0, 50))</span>
                                    <span class="full" style="display:none;">@Html.Raw(p.Description)</span>
                                    <button class="more-button" onclick="toggleDescription(this)">More...</button>
                                }
                                else
                                {
                                    @Html.Raw(p.Description)
                                }
                            </div>
                        </td>
                        <td><a class="btn btn-primary">Edit</a></td>
                        <td><a class="btn btn-primary">Delete</a></td>

                        <td>@p.Description</td>
                        <td><a class="btn btn-primary" asp-controller="Home" asp-action="EditProductsSingle" asp-route-id="@p.ProductId">Edit</a></td>
                        <td><a class="btn btn-danger" asp-controller="Home" asp-action="DeleteProducts" asp-route-id="@p.ProductId">Delete</a></td>

                    </tr>
                }

                <!-- Add more rows as needed -->
            </tbody>
            
        </table>
    </div>
</div>

<a asp-controller="Home" asp-action="EditProducts" asp-route-pageNum="1">1</a>
<a asp-controller="Home" asp-action="EditProducts" asp-route-pageNum="2">2</a>

