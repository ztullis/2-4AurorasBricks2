
@model ProjectsViewModel

<h1>Aurora's Bricks</h1>

<br />
<section class="page-section about-heading">
    <div class="container">
        <div class="about-heading-content">
            <div class="row">
                <div class="col-lg-12">
                    <div class="bg-faded p-5">
                        <div style="background-color:rgba(245, 245, 245, 1); padding: 20px;">
                            <h1>View All Products</h1>
                            <div class="row">
                                @foreach (Product p in Model.Products)
                                {
                                    <partial name="ProjectSummary" model="p" />
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div page-model="@Model.PaginationInfo" page-action="Products" page-class-enabled="true" page-class="btn" page-class-normal="btn-outline-dark" page-class-selected="btn-primary" class="btn-group pull-right m-1"
        page-url-legoType="@Model.CurrentLegoCategory" page-url-legoColor="@Model.CurrentLegoColor" page-url-pageSize="@Model.CurrentPageSize"></div>
    <div>
        <a asp-controller="Home" asp-action="Products" asp-route-pageSize="5" class="show-option-link">5</a>
        <a asp-controller="Home" asp-action="Products" asp-route-pageSize="10" class="show-option-link">10</a>
        <a asp-controller="Home" asp-action="Products" asp-route-pageSize="20" class="show-option-link">20</a>
    </div>

</section>